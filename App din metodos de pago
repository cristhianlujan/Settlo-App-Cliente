  <script>
    const defaultConfig = {
      bank_name: 'Banco BCP',
      original_amount: '2,550.00',
      offer_amount: '1,225.00',
      primary_color: '#7c3aed',
      background_color: '#f9fafb',
      text_color: '#111827',
      accent_color: '#10b981',
      surface_color: '#ffffff'
    };

    let config = { ...defaultConfig };
    let countdownInterval;
    let selectedPlan = null;
    let cuotasConfigData = {
      day: null,
      time: null
    };

    function startCountdown() {
      let totalSeconds = (4 * 3600) + (22 * 60) + 10;
      
      function updateTimer() {
        const hours = Math.floor(totalSeconds / 3600);
        const minutes = Math.floor((totalSeconds % 3600) / 60);
        const seconds = totalSeconds % 60;
        
        document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
        document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
        document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
        
        document.querySelector('.timer-hours-cuotas').textContent = hours.toString().padStart(2, '0');
        document.querySelector('.timer-minutes-cuotas').textContent = minutes.toString().padStart(2, '0');
        document.querySelector('.timer-seconds-cuotas').textContent = seconds.toString().padStart(2, '0');
        
        document.querySelector('.timer-hours-contratos').textContent = hours.toString().padStart(2, '0');
        document.querySelector('.timer-minutes-contratos').textContent = minutes.toString().padStart(2, '0');
        document.querySelector('.timer-seconds-contratos').textContent = seconds.toString().padStart(2, '0');
        
        if (totalSeconds > 0) {
          totalSeconds--;
        } else {
          totalSeconds = (4 * 3600) + (22 * 60) + 10;
        }
      }
      
      updateTimer();
      countdownInterval = setInterval(updateTimer, 1000);
    }

    function calculateSavings(original, offer) {
      const originalNum = parseFloat(original.replace(',', ''));
      const offerNum = parseFloat(offer.replace(',', ''));
      const savings = originalNum - offerNum;
      return savings.toLocaleString('es-PE', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    function navigateTo(screenId) {
      document.querySelectorAll('.screen-content').forEach(screen => {
        screen.classList.add('hidden');
      });
      
      document.getElementById(`screen-${screenId}`)?.classList.remove('hidden');
      
      document.querySelectorAll('.nav-item').forEach(item => {
        const isActive = item.dataset.screen === screenId;
        const icon = item.querySelector('svg');
        const label = item.querySelector('span');
        
        if (isActive) {
          icon.classList.remove('text-gray-500');
          icon.classList.add('text-purple-600');
          label.classList.remove('text-gray-500');
          label.classList.add('text-purple-600', 'font-medium');
        } else {
          icon.classList.remove('text-purple-600');
          icon.classList.add('text-gray-500');
          label.classList.remove('text-purple-600', 'font-medium');
          label.classList.add('text-gray-500');
        }
      });
    }

    function navigateToCuotasConfig(step) {
      document.querySelectorAll('.screen-content').forEach(screen => {
        screen.classList.add('hidden');
      });
      
      const targetScreen = document.getElementById(`screen-cuotas-config-${step}`);
      if (targetScreen) {
        targetScreen.classList.remove('hidden');
      }
    }

    function onConfigChange(newConfig) {
      config = { ...defaultConfig, ...newConfig };
      
      document.getElementById('bank-name').textContent = config.bank_name;
      document.getElementById('original-amount').textContent = `S/ ${config.original_amount}`;
      document.getElementById('offer-amount').textContent = `S/ ${config.offer_amount}`;
      document.getElementById('cuotas-bank-name').textContent = config.bank_name;
      document.getElementById('cuotas-original-amount').textContent = `S/ ${config.original_amount}`;
      document.getElementById('contratos-bank-name').textContent = config.bank_name;
      document.getElementById('contratos-original-amount').textContent = `S/ ${config.original_amount}`;
      document.getElementById('savings-text').textContent = `Ahorras S/ ${calculateSavings(config.original_amount, config.offer_amount)} vs original`;
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.background_color || defaultConfig.background_color,
            set: (value) => {
              config.background_color = value;
              window.elementSdk.setConfig({ background_color: value });
            }
          },
          {
            get: () => config.surface_color || defaultConfig.surface_color,
            set: (value) => {
              config.surface_color = value;
              window.elementSdk.setConfig({ surface_color: value });
            }
          },
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              config.text_color = value;
              window.elementSdk.setConfig({ text_color: value });
            }
          },
          {
            get: () => config.primary_color || defaultConfig.primary_color,
            set: (value) => {
              config.primary_color = value;
              window.elementSdk.setConfig({ primary_color: value });
            }
          },
          {
            get: () => config.accent_color || defaultConfig.accent_color,
            set: (value) => {
              config.accent_color = value;
              window.elementSdk.setConfig({ accent_color: value });
            }
          }
        ],
        borderables: [],
        fontEditable: undefined,
        fontSizeable: undefined
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ['bank_name', config.bank_name || defaultConfig.bank_name],
        ['original_amount', config.original_amount || defaultConfig.original_amount],
        ['offer_amount', config.offer_amount || defaultConfig.offer_amount]
      ]);
    }

    document.addEventListener('DOMContentLoaded', () => {
      startCountdown();
      
      // Navigation
      document.querySelectorAll('.nav-item').forEach(item => {
        item.addEventListener('click', () => {
          navigateTo(item.dataset.screen);
        });
      });

      // Installment selection
      document.querySelectorAll('.installment-card').forEach(card => {
        card.addEventListener('click', () => {
          selectedPlan = card.dataset.plan;
          
          document.querySelectorAll('.installment-card').forEach(c => {
            c.classList.remove('border-purple-600', 'bg-purple-50');
            c.classList.add('border-gray-200', 'bg-white');
            const indicator = c.querySelector('.selection-indicator');
            indicator.classList.remove('bg-purple-600', 'border-purple-600');
            indicator.classList.add('bg-white', 'border-gray-300');
            indicator.innerHTML = '';
          });
          
          card.classList.remove('border-gray-200', 'bg-white');
          card.classList.add('border-purple-600', 'bg-purple-50');
          const indicator = card.querySelector('.selection-indicator');
          indicator.classList.remove('bg-white', 'border-gray-300');
          indicator.classList.add('bg-purple-600', 'border-purple-600');
          indicator.innerHTML = '<svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>';
        });
      });

      // Installment selection - Contratos
      document.querySelectorAll('.installment-card-contratos').forEach(card => {
        card.addEventListener('click', () => {
          const selectedPlanContratos = card.dataset.plan;
          
          document.querySelectorAll('.installment-card-contratos').forEach(c => {
            c.classList.remove('border-purple-600', 'bg-purple-50');
            c.classList.add('border-gray-200', 'bg-white');
            const indicator = c.querySelector('.selection-indicator');
            indicator.classList.remove('bg-purple-600', 'border-purple-600');
            indicator.classList.add('bg-white', 'border-gray-300');
            indicator.innerHTML = '';
          });
          
          card.classList.remove('border-gray-200', 'bg-white');
          card.classList.add('border-purple-600', 'bg-purple-50');
          const indicator = card.querySelector('.selection-indicator');
          indicator.classList.remove('bg-white', 'border-gray-300');
          indicator.classList.add('bg-purple-600', 'border-purple-600');
          indicator.innerHTML = '<svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>';
        });
      });

      // Day selection
      document.querySelectorAll('.day-chip').forEach(btn => {
        btn.addEventListener('click', () => {
          cuotasConfigData.day = btn.dataset.day;
          
          document.querySelectorAll('.day-chip').forEach(b => {
            b.classList.remove('border-purple-700', 'bg-purple-50', 'text-purple-700');
            b.classList.add('border-gray-300', 'bg-white', 'text-gray-900');
          });
          
          btn.classList.remove('border-gray-300', 'bg-white', 'text-gray-900');
          btn.classList.add('border-purple-700', 'bg-purple-50', 'text-purple-700');
          
          checkStepReady();
        });
      });

      // Time selection
      document.querySelectorAll('.time-chip').forEach(btn => {
        btn.addEventListener('click', () => {
          cuotasConfigData.time = btn.dataset.time;
          
          document.querySelectorAll('.time-chip').forEach(b => {
            b.classList.remove('border-purple-700', 'bg-purple-50', 'text-purple-700');
            b.classList.add('border-gray-300', 'bg-white', 'text-gray-900');
          });
          
          btn.classList.remove('border-gray-300', 'bg-white', 'text-gray-900');
          btn.classList.add('border-purple-700', 'bg-purple-50', 'text-purple-700');
          
          checkStepReady();
        });
      });

      function checkStepReady() {
        const btn = document.getElementById('cuotas-config-1-btn');
        if (cuotasConfigData.day && cuotasConfigData.time) {
          btn.disabled = false;
        } else {
          btn.disabled = true;
        }
      }

      // Step 1 continue
      document.getElementById('cuotas-config-1-btn').addEventListener('click', () => {
        navigateToCuotasConfig(2);
      });

      // Step 2 back
      document.getElementById('cuotas-config-2-back').addEventListener('click', () => {
        navigateToCuotasConfig(1);
      });

      // Step 2 continue
      document.getElementById('cuotas-config-2-btn').addEventListener('click', () => {
        navigateToCuotasConfig(3);
      });

      // Step 3 home
      document.getElementById('cuotas-config-3-home').addEventListener('click', () => {
        navigateTo('home');
      });

      // Step 3 docs
      document.getElementById('cuotas-config-3-docs').addEventListener('click', () => {
        alert('📄 Sección de documentos');
      });
    });

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }
